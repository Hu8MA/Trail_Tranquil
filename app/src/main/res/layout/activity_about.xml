<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".about"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="396dp"
                android:src="@drawable/about" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textFontWeight="300"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introducing Trail Tranquil, a mobile application meticulously designed by a group of friends who share a love of exploration and a deep connection to their homeland. Inspired by the desire to enhance every traveller's journey, this app is more than just a guide; It is the embodiment of cultural discovery and smooth movement."
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textFontWeight="200"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="396dp"
                android:src="@drawable/r3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trail Tranquil began with the vision of creating an intuitive tool that provides practical help and profound insights. With a harmonious blend of technology, heritage and spirituality, this app is designed to lead tourists to attractive tourist sites and sacred places. By combining the power of Google Maps, GPS and Fi network tracking With Wi-Fi, it ensures that hikers can easily navigate through busy streets and serene landscapes."
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textFontWeight="200"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="396dp"
                android:src="@drawable/r2"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The core of the app's story lies in its name, Trail Tranquil. It is a digital vision, an abbreviation of quiet paths that pass through the picturesque destinations of our country. Behind the scenes, a dedicated team of developers and designers sought to realize this vision, using their expertise to create an easy-to-use and information-rich interface."
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textFontWeight="200"
                android:textAlignment="center"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="396dp"
                android:src="@drawable/r1"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="The Trail Tranquil is not just about waypoints and directions; It is about fostering a deep connection to the places being explored. It is a cultural companion offering historical anecdotes, local anecdotes and profound insights that enrich the journey. The app is a cultural bridge that ensures language barriers disappear and the essence of each place is easily accepted."
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textFontWeight="200"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_200"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="founder"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textFontWeight="200"
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duha Jabbar Hussein , Israa Rafea Younis \n 2023-2024"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:textAlignment="center"
                android:layout_marginBottom="80dp"
                android:textStyle="bold"

                />



        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        android:background="@color/white_200"/>

</RelativeLayout>
